<h1><%= t('view.user_list') %></h1>

<%= link_to t('view.create_user'), new_admin_user_path %>

<table class='table table-striped'>
  <tr>
    <th><%= t('view.user') %></th>
    <th><%= t('view.email') %></th>
    <th><%= t('view.task_number') %></th>
    <th><%= t('view.admin_auth') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td class="task_name"><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.tasks.count %></td>
      <td><%= user.admin %></td>
      <td><%= link_to t('view.task_detail'), admin_user_path(user.id), class: "btn btn-primary" %></td>
      <td><%= link_to t('view.edit_task'), edit_admin_user_path(user.id), class: "btn btn-success" %></td>
      <td><%= link_to t('view.delete_task'), admin_user_path(user.id), method: :delete , class: 'btn btn-danger' %></td>
    </tr>
  <% end %>
</table>

<%= paginate @users, theme: 'bootstrap-5'%>