<h1><%= @user.name %>のページ</h1>

<p>メールアドレス: <%= @user.email %></p>

<%= link_to t('view.task_list'), tasks_path %>

<table class='table table-striped'>
  <tr>
    <th><%= t('view.task') %></th>
    <th><%= t('view.detail') %></th>
    <th><%= link_to t('view.due_date'), tasks_path(sort_expired: "true") %></th>
    <th><%= t('view.status') %></th>
    <th><%= t('view.created_user') %></th>
    <th><%= t('view.priority') %></th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td class="task_name"><%= task.task_name %></td>
      <td><%= task.task_detail %></td>
      <td><%= task.due_date.strftime('%Y-%m-%dT%T') %></td>
      <td><%= task.status %></td>
      <td><%= task.user.name %></td>
      <td><%= task.priority %></td>
    </tr>
  <% end %>
</table>