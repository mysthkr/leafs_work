
<%= link_to t('view.create_task'), new_task_path %>
<p><%= notice %></p>
<h1><%= t('view.task_list') %></h1>

<%= link_to t('view.id_order'), tasks_path %>
<%= link_to t('view.created_order_desc'), index_created_desc_tasks_path %>

<table>
  <tr>
    <th><%= t('view.task') %></th>
    <th><%= t('view.detail') %></th>
    <th><%= t('view.due_date') %></th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td class="task_name"><%= task.task_name %></td>
      <td><%= task.task_detail %></td>
      <td><%= task.due_date.strftime('%Y-%m-%dT%T') %></td>
      
      <td><%= link_to t('view.task_detail'), task_path(task.id) %></td>
      <td><%= link_to t('view.edit_task'), edit_task_path(task.id) %></td>
      <td><%= link_to t('view.delete_task'), task_path(task.id), method: :delete %></td>
    </tr>
  <% end %>
</table>